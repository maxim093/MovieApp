html
  head
    title Filme
    link(link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous")
    link(rel='stylesheet', href='/style.css')
  body(style={'background-color': "#343A40"})
   form.p-0.m-0(action='/')
    input.btn.btn-primary.m-2(type='submit', value='ZurÃ¼ck')
   div.container-fluid
    div.row.justify-content-center
      if title == ""
       div.col
        h1.display-4.text-center.text-white.font-weight.thin.mt-5 Hoppla..Leider kein Film gefunden.
         img.rounded.mx-auto.d-block.mt-1-.img-fluid.mt-3(src= "/whale.png" width="200" height="auto" )
      else if start.length > 1
       each val, index in title
        a.link(href="/movies/" + title[index])
         div.col-xl-2.col-lg-3.col-md-4.col-sm-6.border.p-3.m-3.cursor-pointer(style={'background-color': "#fff"})
          img.rounded.mx-auto.d-block.mt-1.img-fluid(src= "" + thumbnail[index] width="200" height="auto" )
          h5.text-center.font-weight-normal.pt-3.u= val
          p.text-center.lead= genre[index]
      else    
        div.container-fluid
         div.row
          div.col.p-0
           img.rounded.mx-auto.d-block(src= "" + thumbnail width="auto" height="400" )
           div.p-3.mt-2(style={'background-color': "#fff"})
            h1.display-4.text-center= title
            p.text-center Genre: #{genre}
            p.text-center Erscheinungsdatum: #{start}
            p.text-center #{description}

 
      
   
     
